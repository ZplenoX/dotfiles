},
"group/powermenu": {
  "orientation": "inherit",
  "drawer": {
      "transition-duration": 200,
    },
  "modules": [ 
    "custom/quit",
    "custom/reboot",
    "custom/lock",
    "custom/sleep",
  ]

},
  "custom/quit": {
