  "custom/swaync": {
    "tooltip": true,     
    "format": "{icon}",
    "format-icons": {
      "notification": "ğŸ””<span foreground='red'><sup>ï‘„</sup></span>",
      "none": "ğŸ””",
      "dnd-notification": "ğŸ”•<span foreground='red'><sup>ï‘„</sup></span>",
      "dnd-none": "ğŸ”•",
      "inhibited-notification": "ğŸ””<span foreground='red'><sup>ï‘„</sup></span>",
