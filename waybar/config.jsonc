 "format-icons": {
      "default": "ï„‘",
      "active": "ï†’",
      "urgent": "ïª",
    },
    

  },
  "clock": {
    "interval": 1,
    "format": "{:%A %d  ï€—   %H:%M} ",
    "tooltip": false,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "on-click": "gnome-clocks",
