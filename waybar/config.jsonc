{
  // Waybar Config
  "layer": "top",
  "height": 40,
  "modules-left": [
    "group/powermenu",
    "custom/seperator",
    "hyprland/window",
    "mpris",
  ],
  "modules-center": [
    "hyprland/workspaces",
    "clock",
  ],
  "modules-right": [
    "bluetooth",
    "network",
    "pulseaudio",
    "custom/seperator",
    "custom/swaync",
  ],
"hyprland/workspaces": {
